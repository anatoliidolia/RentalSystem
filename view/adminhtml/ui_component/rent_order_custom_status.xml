<?xml version="1.0" encoding="UTF-8"?>
<form xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <argument name="data" xsi:type="array">
        <item name="js_config" xsi:type="array">
            <item name="provider" xsi:type="string">rent_order_custom_status.rent_orders_listing_data_source</item>
        </item>
        <item name="template" xsi:type="string">templates/form/collapsible</item>
    </argument>
    <settings>
        <namespace>rent_order_custom_status</namespace>
        <dataScope>data</dataScope>
        <deps>
            <dep>rent_order_custom_status.rent_orders_listing_data_source</dep>
        </deps>
    </settings>
    <dataSource name="rent_orders_listing_data_source">
        <argument name="data" xsi:type="array">
            <item name="js_config" xsi:type="array">
                <item name="component" xsi:type="string">Magento_Ui/js/form/provider</item>
            </item>
        </argument>
        <dataProvider class="Magento\Framework\View\Element\UiComponent\DataProvider\DataProvider" name="rent_orders_listing_data_source">
            <settings>
                <requestFieldName>order_id</requestFieldName>
                <primaryFieldName>order_id</primaryFieldName>
            </settings>
        </dataProvider>
    </dataSource>
    <fieldset name="general">
        <settings>
            <label translate="true">Rental System - Set Custom Status</label>
        </settings>
        <field name="order_status" component="Magento_Ui/js/form/element/select" formElement="select">
            <settings>
                <dataType>text</dataType>
                <label translate="true">Order Status</label>
                <dataScope>order_status</dataScope>
            </settings>
            <formElements>
                <select>
                    <settings>
                        <options class="PeachCode\RentalSystem\Model\Order\Status\StatusDropdown"/>
                    </settings>
                </select>
            </formElements>
        </field>
        <field name="save_button" sortOrder="50" formElement="button">
            <argument name="data" xsi:type="array">
                <item name="config" xsi:type="array">
                    <item name="displayAsLink" xsi:type="boolean">false</item>
                    <item name="title" xsi:type="string" translate="true">Save</item>
                    <item name="buttonClasses" xsi:type="string">action-primary</item>
                    <item name="actions" xsi:type="array">
                        <item name="save" xsi:type="string">save</item>
                    </item>
                </item>
            </argument>
        </field>
    </fieldset>
</form>
